      src="https://code.jquery.com/jquery-3.5.1.js"
      integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
      crossorigin="anonymous"
    ></script>

    <!-- jQueary ui -->
       
   
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" 
    integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" 
    crossorigin="anonymous">
  </script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">


    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    
  
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://kit.fontawesome.com/91abd10b8f.js"
      crossorigin="anonymous"
    ></script>
      
  

    <link rel="stylesheet" href="http://localhost:8081/api/stylesheets/style.css" />  
    <link rel="stylesheet" href="http://localhost:8081/api/stylesheets/filter.css" />   
    <link rel="stylesheet" href="http://localhost:8081/api/stylesheets/review-popup.css" />

     <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Mapbox -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v1.10.0/mapbox-gl.js"></script>
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v1.10.0/mapbox-gl.css"
      rel="stylesheet"
    />

    <script src="http://localhost:8081/api/javascripts/autocomplete.js"></script>
  </head>

  <body>
    <div id="page-container">
      <div id="content-wrap">
    <div class="row nav-container mx-auto">
      <div class="col-md-4 col-sm-12 col-xs-12">
        <div class="search-container">
          <form class="form-inline" autocomplete="off" action="http://localhost:8081/api/products/search" method="GET">
            <input
              class="search-input"
              type="search"
              placeholder="Search"
              name="search"
              id="search-box"
            />
          </form>
        </div>
      </div>

      <div class="col-md-4 col-sm-12 col-xs-12 logo-container">
        <a href="http://localhost:8081/api/">
          <img class="logo-img img-fluid" src="http://localhost:8081/inventoryservice/icons/shop-icon.png" alt="logo" />
          <h4 class="logo-title">BestBags</h4>
        </a>
      </div>

      <div class="col-md-4 col-sm-12 col-xs-12 right-nav">
        <ul>
          <li>
            <!--IF user is not logged him go to authenticate page-->
            <%if (userAttributes.id == -1) {%>
              <a href="http://localhost:8081/api/user/authenticate">
            <%} else {%>
              <a href="http://localhost:8081/api/user/my-wishlist">
            <%}%>
              <i class="fa fa-heart fa-lg"></i> 
              <span class="badge badge-pill badge-info"
                ><%=userAttributes.bookmarkSize%></span
              >
            </a>
          </li>
          <li>
            <%if (userAttributes.id == -1) {%>
              <a href="http://localhost:8081/api/user/authenticate">
            <%} else {%>
              <a href="http://localhost:8081/api/user/my-cart">
            <%}%>
              <i class="fas fa-shopping-cart"></i> 
              <span class="badge badge-pill badge-info"><%= userAttributes.cartSize %></span>
              
            </a>
          </li>
          <% if (userAttributes.id != -1) { %>
          <li>
            <a
              class="dropdown-toggle"
              href="#"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              <i class="fas fa-user"></i> Welcome <%= userAttributes.fullName %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="http://localhost:8081/api/user/my-profile">User Account</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="http://localhost:8081/signout">Logout</a>
            </div>
          </li>
          <% } else {%>
          <li>
            <a href="http://localhost:8081/api/user/register"> Sign Up</a>
          </li>
          <li>
            <a href="http://localhost:8081/api/user/authenticate"> Sign In</a>
          </li>
          <% }%>
        </ul>
      </div>
    </div>