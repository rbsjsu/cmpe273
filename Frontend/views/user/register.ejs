<%- include ("../partials/header") %> <%- include ("../partials/categories-navbar") %>

<div class="container">
  <div class="row">
    <div class="col-md-8 m-auto">
      <h1 class="mt-4 mb-4">Sign Up Page</h1>
      <% if(errorMsg != null && errorMsg.length>0) {%>
      <div id="flash-msg" class="alert alert-danger">
        <%=errorMsg %>
      </div>
      <%}%>
      <!-------------MAKE THE POST REQUEST TO USER SERVICE----------------->
      <form action="http://localhost:8081/signup" method="POST">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input
            type="name"
            class="form-control"
            name="firstNameString"
            id="firstName"
            required
          />
        </div>
        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input
              type="name"
              class="form-control"
              name="lastNameString"
              id="lastName"
              required
            />
        </div>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" name="emailString" id="email" />
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone number</label>
            <input
              type="name"
              class="form-control"
              name="phoneNumberString"
              id="phoneNumber"
              minlength="10"
              maxlength="10"
              required
            />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control"
            name="passwordString"
            id="password"
            required
          />
        </div>
        <div class="form-group">
          <label for="password2">Verify Password</label>
          <input
            type="password"
            class="form-control"
            name="confirmPasswordString"
            id="password2"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary button-style">
          Sign Up
        </button>
      </form>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>
