<%- include ("../partials/header") %> <%- include ("../partials/categories-navbar") %>

<div class="container">
  <div class="row">
    <div class="col-md-8 m-auto">
      <h1 class="mt-4 mb-4">Authentication Page</h1>
      <% if (queryObject.verify == "email") { %>
        <div class="alert alert-primary" role="alert">Verify Email before logging in.</div>
      <% }%>
      <% if (queryObject.verify == "credentials") { %>
        <div class="alert alert-danger" role="alert">Invalid credentials</div>
      <% }%>
      <form action="http://localhost:8081/authenticate" method="POST">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" name="usernameString" id="email" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control"
            name="passwordString"
            id="password"
          />
        </div>
        <button type="submit" class="btn btn-primary button-style">
          Sign In
        </button> 
      </form>
      <a href="http://localhost:8081/api/user/forgot-password" class="btn btn-link">Forgot your password?</a>
      <p class="mt-3">
        Don't have an account? <a href="http://localhost:8081/api/user/signup" > Sign Up!</a>
      </p>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>
